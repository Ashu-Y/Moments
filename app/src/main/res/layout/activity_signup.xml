<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ff2ce"
    tools:context="com.practice.android.moments.Activities.Signup"
    tools:ignore="HardcodedText,RtlHardcoded">

    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="Create Account"
        android:textColor="#e8cc1b1b"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/nameca"
        android:layout_width="198sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/create"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="37sp"
        android:hint="Enter your name" />

    <EditText
        android:id="@+id/emailuser"
        android:layout_width="198sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameca"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passwordca"
        android:layout_width="198sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/emailuser"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/conpasswordca"
        android:layout_width="198sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordca"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:hint="Confirm passwordca"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/phoneuser"
        android:layout_width="198sp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/conpasswordca"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:hint="Phone"
        android:inputType="phone" />

    <Button
        android:id="@+id/newaccount"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_below="@+id/phoneuser"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:background="#76bc34"
        android:text="Submit" />

    <Button
        android:id="@+id/loginuser"
        android:layout_width="100sp"
        android:layout_height="45sp"
        android:layout_below="@+id/phoneuser"
        android:layout_marginLeft="32sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="20sp"
        android:layout_toRightOf="@id/newaccount"
        android:background="#76bc34"
        android:text="Sign in" />


</RelativeLayout>
