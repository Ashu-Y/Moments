<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011a27"
    android:theme="@style/materialtheme2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@android:style/Theme.Material"
        android:weightSum="1"
        tools:context="com.example.gmgautam5000.layout.MainActivity"
        tools:ignore="NewApi">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#011a27"
            android:gravity="center"
            android:paddingRight="16dp"

            android:text="@string/user_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="@string/name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:inputType="textPersonName"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="@string/email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:inputType="textEmailAddress"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="@string/hint_phone_number"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:inputType="phone"
            android:paddingLeft="9dp"
            android:paddingRight="9dp" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="@string/about"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />


        <EditText
            android:id="@+id/editText541"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:inputType="textShortMessage"
            android:paddingLeft="9dp"
            android:paddingRight="9dp" />

        <TextView
            android:id="@+id/textView087"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/date_of_birth"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:clickable="true"
            android:ems="10"
            android:focusable="false"
            android:inputType="textShortMessage"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            tools:ignore="TextFields" />


        <TextView
            android:id="@+id/textView0827"
            android:layout_width="155dp"
            android:layout_height="25dp"

            android:layout_marginTop="25dp"
            android:text="@string/relationship"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/Relationship"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:textColor="#FFFFFF"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:spinnerMode="dropdown" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:background="#063852"
            android:gravity="center"

            android:text="@string/submit" />


    </LinearLayout>

</ScrollView>

