<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.practice.android.moments.Fragments.Upload_picture">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:contentDescription="@string/new_upload"
        app:srcCompat="@color/adobe_csdk_asset_browser_dark_text" />

    <EditText
        android:id="@+id/image_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:hint="@string/enter_the_title"
        android:textStyle="bold" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_title"
        android:id="@+id/image_description"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="@string/enter_description" />

    <Button
        android:id="@+id/button_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/choose_image"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginBottom="13dp" />

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:layout_alignBaseline="@+id/button_choose"
        android:layout_alignBottom="@+id/button_choose"
        android:layout_alignEnd="@+id/imageView2" />

</RelativeLayout>
