<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
       android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        app:cardBackgroundColor="#a5c7d1">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:gravity="center"
                android:textColor="#000"
                android:text="Title"
                android:textSize="18sp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/darker_gray"/>

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:src="@drawable/coffee1" />

            <TextView
                android:id="@+id/likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="0 people liked your post"
                android:textColor="#000"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="1">

                <ToggleButton
                    android:id="@+id/like_btn"
                    android:layout_width="45sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/like"
                    android:paddingLeft="12dp"
                    android:background="@null"
                    android:text="@null"
                    android:button="@drawable/likecheck" />

                <ImageButton
                    android:id="@+id/comment_btn"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="#a5c7d1"
                    android:contentDescription="@string/add_comments"
                    android:src="@drawable/ic_action_comment" />


            </LinearLayout>

            <TextView
                android:id="@+id/_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:text="title"
                android:textColor="#000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="100"
                android:maxLines="2"
                android:paddingLeft="8dp"
                android:text="Hey There"
                android:textColor="#000"
                android:textSize="14sp" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>