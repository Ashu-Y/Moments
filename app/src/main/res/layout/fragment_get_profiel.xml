<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011a27"
    android:theme="@style/materialtheme2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@android:style/Theme.Material"
        android:weightSum="1"
        tools:context="com.practice.android.moments.Fragments.getProfiel"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,LabelFor"
        tools:targetApi="lollipop">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:background="#011a27"
            android:gravity="center"
            android:paddingRight="16sp"
            android:text="User Info "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="155sp"
            android:layout_height="25sp"
            android:layout_marginTop="25sp"
            android:paddingRight="16sp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewname"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="155sp"
            android:layout_height="25sp"
            android:layout_marginTop="25sp"
            android:paddingRight="16sp"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewemail"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginTop="25sp"
            android:paddingRight="16sp"
            android:text="Phone"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewphone"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/circle"
            android:ems="10"
            android:paddingLeft="15sp"
            android:paddingRight="15sp" />

        <TextView
            android:id="@+id/textView87"
            android:layout_width="155sp"
            android:layout_height="25sp"
            android:layout_marginTop="25sp"
            android:paddingRight="16sp"
            android:text="About Me"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/TextViewabout"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/circle"
            android:ems="10"
            android:paddingLeft="15sp"
            android:paddingRight="15sp" />

        <TextView
            android:id="@+id/textView087"
            android:layout_width="155sp"
            android:layout_height="25sp"
            android:layout_marginTop="25sp"
            android:text="Date Of Birth"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TextViewdate"
                android:layout_width="0sp"
                android:layout_height="35sp"
                android:layout_margin="3sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="10sp"
                android:layout_weight="9"
                android:background="#063852"
                android:paddingLeft="15sp"
                android:paddingRight="15sp" />

            <ImageView
                android:id="@+id/imageView45"
                android:layout_width="0sp"
                android:layout_height="24sp"
                android:layout_margin="4sp"
                android:layout_weight="1"
                android:src="@drawable/ic_date_range_black_24dp"
                android:tint="@android:color/white"
                tools:ignore="ContentDescription,VectorDrawableCompat" />
        </LinearLayout>


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="388sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"
            tools:ignore="InefficientWeight" />

        <TextView
            android:id="@+id/textView0827"
            android:layout_width="155sp"
            android:layout_height="25sp"
            android:layout_marginTop="25sp"
            android:text="Relationship"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/relationship"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="@drawable/circle"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:spinnerMode="dropdown" />


        <Button
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150sp"
            android:layout_marginTop="25sp"
            android:background="#063852"
            android:gravity="center"
            android:text="Submit" />


    </LinearLayout>

</ScrollView>


