<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_material_dark_1"
    android:isScrollContainer="false"
    android:orientation="vertical"
    tools:context="com.practice.android.moments.Fragments.EditingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/editedImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/input"
            android:padding="8dp"
            android:src="@drawable/add_btn"/>

    </LinearLayout>

    <Button
        android:id="@+id/launchImageEditorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#b2dfdb"
        android:text="Open Image Editor"/>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#b2dfdb"
        android:text="Save to device"/>


    <Button
        android:id="@+id/upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#b2dfdb"
        android:text="Upload"/>


</LinearLayout>
