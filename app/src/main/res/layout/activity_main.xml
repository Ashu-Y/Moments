<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011a27"
    app:theme="@style/materialtheme2"
    tools:context="com.practice.android.moments.Activities.MainActivity"
    tools:ignore="HardcodedText,RtlHardcoded">

    <EditText
        android:id="@+id/Emailogin"
        style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_73sdp"
        android:background="@drawable/circle"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText"/>

    <EditText
        android:id="@+id/passlogin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:layout_below="@+id/Emailogin"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/circle"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingTop="@dimen/_5sdp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="16sp"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_35sdp"
        android:background="@drawable/circle"
        android:padding="@dimen/_16sdp"
        android:text="Get Started"
        android:textColor="#e4ea8c"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#e4ea8c"
        android:textSize="34sp"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="@drawable/circle"
        android:text="Be one"
        android:textColor="#e4ea8c"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/passlogin"
        android:layout_alignStart="@+id/passlogin"
        android:layout_toLeftOf="@+id/button2"
        android:gravity="center"
        android:text="Not a member"
        android:textColor="#e4ea8c"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/passreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:clickable="true"
        android:text="Forgot Password!!! RESET NOW"
        android:textColor="#e4ea8c"
        android:textSize="18sp"
        android:textStyle="bold"/>


</RelativeLayout>
