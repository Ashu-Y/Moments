<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3ff2ce"
    tools:context="com.practice.android.moments.Activities.MainActivity"
    tools:ignore="HardcodedText,RtlHardcoded">

    <EditText
        android:id="@+id/Emailogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passlogin"
        android:layout_alignStart="@+id/passlogin"
        android:layout_below="@+id/textView"
        android:layout_marginTop="70dp"
        android:hint="Email Id"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/passlogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Emailogin"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:hint="password"
        android:inputType="textPassword"
        android:maxLength="10"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="#76bc34"
        android:text="Sign in"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10sp"

        android:gravity="center"
        android:text="LOGIN"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#e8cc1b1b"
        android:textSize="34sp" />


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/button"
        android:layout_toRightOf="@+id/button"
        android:background="#76bc34"
        android:text="Be one" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/passlogin"
        android:layout_alignStart="@+id/passlogin"
        android:layout_toLeftOf="@+id/button2"
        android:gravity="center"
        android:text="Not a member"
        android:textSize="18sp" />


</RelativeLayout>
