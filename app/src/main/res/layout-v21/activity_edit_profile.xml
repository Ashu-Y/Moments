<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011a27"
    android:theme="@style/materialtheme2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@android:style/Theme.Material"
        android:weightSum="1"
        tools:context="com.example.gmgautam5000.layout.MainActivity">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#011a27"
            android:gravity="center"
            android:paddingRight="16dp"

            android:text="User Info "
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/textView"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"

            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:inputType="textPersonName"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editText9"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:inputType="textEmailAddress"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="Phone"

            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:inputType="phone"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"/>

        <TextView
            android:id="@+id/textView87"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:paddingRight="16dp"
            android:text="About"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/editText541"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:ems="10"
            android:inputType="textShortMessage"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"/>

        <TextView
            android:id="@+id/textView087"
            android:layout_width="155dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:text="Date Of Birth"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_date"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_margin="3dp"
                android:layout_weight="9"
                android:background="#063852"
                android:inputType="textShortMessage"
                android:paddingLeft="9dp"
                android:paddingRight="9dp"/>

            <ImageView
                android:id="@+id/imageView45"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:src="@drawable/ic_date_range_black_24dp"
                android:tint="@android:color/white"/>
        </LinearLayout>


        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.53"/>

        <TextView
            android:id="@+id/textView0827"
            android:layout_width="155dp"
            android:layout_height="25dp"

            android:layout_marginTop="25dp"
            android:text="Relationship"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"/>

        <Spinner
            android:id="@+id/Relationship"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/circle"
            android:paddingLeft="9dp"
            android:paddingRight="9dp"
            android:spinnerMode="dropdown"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:background="#063852"
            android:gravity="center"
            android:text="Submit"/>


    </LinearLayout>

</ScrollView>

